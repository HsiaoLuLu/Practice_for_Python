#Trangle
num = int(input('Please type a number:'))

for i in range(num):
    space = ' ' * (num - i -1)
    star = '*' * (i * 2 + 1)
    print(space,star)

#Diamond
num = int(input('Please type a number:'))

for i in range(num):
    space = ' ' * (num - i -1)
    star = '*' * (i * 2 + 1)
    print(space,star)
for i in range(1,num):
    space = ' ' * i
    star = '*' * (2 * (num - i) - 1)
    print(space,star)



#Use Recursion 遞迴
